@model IList<Contract>;

@{
    ViewData["Title"] = "Participated Contracts";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<br />
@{
    ViewBag.User = "Participate";
}
@{
    ViewBag.View = "ContractList";
    if (Model != null && Model.Count > 0)
    {

        <table style="width:100%" class="table table-responsive table-striped table-bordered">
            <partial name="ContractDetailTableHeader" model="@Model.FirstOrDefault()"></partial>

            @foreach (var item in Model)
            {
                <partial name="ContractDetailTableBody" model="item"></partial>
            }
        </table>

    }
    else
    {
        <h2>Contracts are empty!</h2>
    }
}