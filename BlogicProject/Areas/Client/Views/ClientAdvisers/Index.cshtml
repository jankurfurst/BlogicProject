@model IList<UserSimpleDetailViewModel>;

@{
    ViewData["Title"] = "My Advisers";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<br />
@{
    ViewBag.View = "UserList";
    if (Model != null && Model.Count > 0)
    {

        <table style="width:100%" class="table table-responsive table-striped table-bordered">
            <partial name="UserDetailTableHeader" model="@Model.FirstOrDefault()"></partial>

            @foreach (var item in Model)
            {
                <partial name="UserDetailTableBody" model="item"></partial>
            }
        </table>

    }
    else
    {
        <h2>Advisers are empty!</h2>
    }
}