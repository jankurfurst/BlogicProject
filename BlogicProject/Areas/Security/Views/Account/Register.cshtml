@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<div id="logreg-forms">
    <form asp-action="Register" method="post" class="form-signup">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="FirstName" type="text" id="first-name" class="form-control" placeholder="First name" required autofocus="">
        <input asp-for="LastName" type="text" id="last-name" class="form-control" placeholder="Last name" required autofocus="">
        <input asp-for="PI_Number" type="text" id="rodne-cislo" class="form-control" placeholder="Rodne cislo" required="" autofocus="">
        <span asp-validation-for="PI_Number" class="text-danger"></span>
        <input asp-for="Email" type="email" id="user-email" class="form-control" placeholder="Email address" required autofocus="">
        <input asp-for="Phone" type="tel" id="user-phone" class="form-control" placeholder="Phone" autofocus="">
        <br />
        <input asp-for="Password" type="password" id="user-pass" class="form-control" placeholder="Password" autofocus="">
        <input asp-for="RepeatedPassword" type="password" id="user-repeatpass" class="form-control" placeholder="Repeat Password" autofocus="">
        <br />

        <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Sign Up</button>
        <br />
        <br />
        <hr>
        <a asp-action="Login" class="btn btn-success btn-block text-white" type="button" id="btn-signin"><i class="fas fa-sign-in-alt"></i> Sign in to Existing Account</a>
    </form>
</div>